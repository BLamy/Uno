<Window x:Class="Uno.Views.GameWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Uno.Views"
        mc:Ignorable="d"
        Title="BlackJack" Height="300" Width="300" WindowState="Maximized">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="2*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <StackPanel Name="DealerPanel" Grid.Column="0" Grid.Row="0">
            <TextBlock FontSize="18">Dealer</TextBlock>
            <StackPanel Name="DealerField" Orientation="Horizontal">

            </StackPanel>
        </StackPanel>

        <StackPanel Grid.Column="1" Grid.Row="0">
            <Image Source="/Assets/dealer.png" Width ="75" HorizontalAlignment="Left" />
            <TextBlock FontSize="18">Score</TextBlock>
            <TextBlock Name="DealerScoreTextBlock" FontSize="20" FontWeight="Bold"></TextBlock>
        </StackPanel>

        <StackPanel Name="PlayerPanel" Grid.Column="0" Grid.Row="1">
            <TextBlock Name="PlayerTextBlock" FontSize="18"></TextBlock>
            <StackPanel Name="PlayerField" Orientation="Horizontal">
                
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <Button Name="HitButton" Width="100" Height="50" Click="HitButton_Click">Hit</Button>
                <Button Name="StandButton" Width="100" Height="50" Click="StandButton_Click">Stand</Button>
            </StackPanel>
        </StackPanel>

        <StackPanel Grid.Column="1" Grid.Row="1">
            <Image Source="/Assets/player.png" Width="75" HorizontalAlignment="Left" />
            <TextBlock FontSize="18">Score</TextBlock>
            <TextBlock Name="PlayerScoreTextBlock" FontSize="20" FontWeight="Bold"></TextBlock>
        </StackPanel>
    </Grid>
</Window>
