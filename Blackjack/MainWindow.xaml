<Window x:Class="Uno.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Uno"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Label x:Name="label" Content="Black Jack Fun&#xD;&#xA;" HorizontalAlignment="Center" Margin="135,24,0,0" VerticalAlignment="Top" Width="225" Height="26"/>
        <TextBox x:Name="PlayerNameTextBox" HorizontalAlignment="Center" Height="23" Margin="204,189,193,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="120"/>
        <Button x:Name="NewGameButton" Content="New Game" HorizontalAlignment="Center" Margin="204,245,193,0" VerticalAlignment="Top" Width="120" Click="NewGameButton_Click" Background="#FF3EC558"/>
        <Image x:Name="image" HorizontalAlignment="Left" Height="100" Margin="214,55,0,0" VerticalAlignment="Top" Width="72" Source="http://deckofcardsapi.com/static/img/AS.png"/>
        <Image x:Name="image_Copy" HorizontalAlignment="Left" Height="100" Margin="233,55,0,0" VerticalAlignment="Top" Width="73" Source="http://deckofcardsapi.com/static/img/KS.png" RenderTransformOrigin="0.5,0.5">
            <Image.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="10"/>
                    <TranslateTransform/>
                </TransformGroup>
            </Image.RenderTransform>
        </Image>

    </Grid>
</Window>
